# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf

[*.toml]
max_line_length = 100
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = false

[layouts/shortcodes/*.html]
insert_final_newline = false
